<div class="container">
  <div class="block">
    <h1 class="title">New Order</h1>
    <%= form_with(model: [@customer, @order], local: true) do |form| %>
      <div class="field">
        <%= form.label "Quantity", class: "label" %>
        <div class="control">
          <%= form.text_field :quantity, class: "input"%>
        </div>
      </div>
      <%= form.submit "Create", class: "button is-primary"  %>
    <% end %>
  </div>
</div>


