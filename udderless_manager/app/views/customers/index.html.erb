
<%= javascript_pack_tag 'hello_react' %>
<div>
  <%= link_to 'Add New Customer', new_customer_path, class: "button is-primary" %>
</div>
<section class="section">
  <% @customers[0..9].each do |customer| %>
    <% first_name = customer.first_name.nil? ? "" : customer.first_name %>
    <% last_name = customer.last_name.nil? ? "" : customer.last_name %>
    <% name = first_name + " " + last_name %>
    <div class="container">
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="subtitle is-4">
                <%= link_to name, customer %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %> 
</section>