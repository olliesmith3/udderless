<div class="container">
  <div class="block">
    <h1 class="title">New Customer</h1>
    <%= form_for @customer do |form| %>
      <div class="field">
        <%= form.label "First Name", class: "label" %>
        <div class="control">
          <%= form.text_field :first_name, class: "input"%>
        </div>
      </div>
      <div class="field">
        <%= form.label "Last Name", class: "label" %>
        <div class="control">
          <%= form.text_field :last_name, class: "input" %>
        </div>
      </div>
      <div class="field">
        <%= form.label "Address Line 1", class: "label" %>
        <div class="control">
          <%= form.text_field :address_line_1, class: "input"%>
        </div>
      </div>
      <div class="field">
        <%= form.label "Address Line 2", class: "label" %>
        <div class="control">
          <%= form.text_field :address_line_2, class: "input" %>
        </div>
      </div>
      <div class="field">
        <%= form.label "Town/City", class: "label" %>
        <div class="control">
          <%= form.text_field :town, class: "input" %>
        </div>
      </div>
      <div class="field">
        <%= form.label "County", class: "label" %>
        <div class="control">
          <%= form.text_field :county, class: "input" %>
        </div>
      </div>
      <div class="field">
        <%= form.label "postcode", class: "label" %>
        <div class="control">
          <%= form.text_field :postcode, class: "input" %>
        </div>
      </div>
      <div class="field">
        <%= form.label "email", class: "label" %>
        <div class="control">
          <%= form.email_field :email, class: "input" %>
        </div>
      </div>
      <div class="field">
          <%= form.label "Telephone Number", class: "label" %>
        <div class="control">
          <%= form.text_field :tel, class: "input" %>
        </div>
      </div>
      <%= form.submit "Create", class: "button is-primary"  %>
    <% end %>
  </div>
</div>